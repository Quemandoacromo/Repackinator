<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="150"
        x:Class="Repackinator.MessageWindow"
        Width="400"
        Height="100"
        CanResize="False"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterOwner"
        Icon="/Assets/repackinator.ico" 
        Title="">
  <DockPanel LastChildFill="True" Margin="10">
    <Button x:Name="OkButton" VerticalAlignment="Bottom" HorizontalAlignment="Left" DockPanel.Dock="Bottom" Content="OK"/>
    <Label x:Name="Message" VerticalAlignment="Center" HorizontalAlignment="Center"  Content=""/>
  </DockPanel>
</Window>
